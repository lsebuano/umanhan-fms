@inject DialogService DialogService
@inject CustomerService CustomerService
@inject AppNotificationService NotificationService
@inject IValidator<CustomerDto> Validator
@inject CustomerTypeService CustomerTypeService

<RadzenStack Gap="1rem" Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween" class="umh-height-100">
    <RadzenStack>
        <RadzenColumn Size="12" SizeMD="12" class="rz-p-4 rz-border-radius-1 umh-border-cell-border">
            <RadzenTemplateForm TItem="CustomerDto" Data="@obj" Submit="@SaveChanges">
                <RadzenStack>
                    <FluentValidationValidator Validator="@Validator" />

                    <RadzenFormField Text="Customer" Variant="Variant.Text">
                        <RadzenTextBox @bind-Value="obj.CustomerName" />
                    </RadzenFormField>
                    <ValidationMessage For="@(() => obj.CustomerName)" />

                    <RadzenFormField Text="Address" Variant="Variant.Text">
                        <RadzenTextBox @bind-Value="obj.Address" />
                    </RadzenFormField>
                    <ValidationMessage For="@(() => obj.Address)" />

                    <RadzenFormField Text="Contact Info" Variant="Variant.Text">
                        <RadzenTextBox @bind-Value="obj.ContactInfo" />
                    </RadzenFormField>
                    <ValidationMessage For="@(() => obj.ContactInfo)" />

                    <RadzenFormField Text="Email" Variant="Variant.Text">
                        <RadzenTextBox @bind-Value="obj.EmailAddress" />
                    </RadzenFormField>
                    <ValidationMessage For="@(() => obj.EmailAddress)" />

                    <RadzenFormField Text="Customer Type" Variant="Variant.Text">
                        <RadzenDropDown @ref=@radzenDropDown @bind-SearchText=SearchText FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                        FilterOperator="StringFilterOperator.StartsWith" AllowFiltering="true"
                                        Data=@customerTypes TextProperty="@nameof(CustomerTypeDto.CustomerTypeName)" ValueProperty="@nameof(CustomerTypeDto.TypeId)"
                                        AllowClear="true" @bind-Value="obj.CustomerTypeId" Name="CustomerTypeId" />
                    </RadzenFormField>
                    <ValidationMessage For="@(() => obj.CustomerTypeId)" />

                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                        <RadzenLabel Text="Contract-Eligible" Component="ContractEligible" />
                        <RadzenSwitch @bind-Value=@obj.ContractEligible Name="ContractEligible" />
                        <ValidationMessage For="@(() => obj.ContractEligible)" />
                    </RadzenStack>
                </RadzenStack>

                <RadzenFooter>
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="0.5rem">
                        <RadzenButton Text="Cancel" Click="() => DialogService.Close(false)" ButtonStyle="ButtonStyle.Light" />
                        <RadzenButton Text=@(isSaving ? "Saving..." : "Save") Icon=@(isSaving ? "hourglass" : "check") Type="Submit" Disabled="isSaving" />
                    </RadzenStack>
                </RadzenFooter>
            </RadzenTemplateForm>
        </RadzenColumn>
    </RadzenStack>
    <RadzenStack Visible="@ShowClose" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem">
        <RadzenButton Click="@((args) => DialogService.Close(true))" Variant="Variant.Flat" Text="Close" class="umh-width-120px" />
    </RadzenStack>
</RadzenStack>

@code {
    [Parameter] public Guid ObjId { get; set; }
    [Parameter] public bool ShowClose { get; set; }
    private Guid objId;
    private string mode = "Add";
    private CustomerDto obj;
    private string title = "Message";
    private string message;
    private EditContext editContext;
    private bool isSaving;

    RadzenDropDown<Guid> radzenDropDown;
    private string searchText;
    private IEnumerable<CustomerTypeDto> customerTypes;

    protected override async Task OnInitializedAsync()
    {
        objId = ObjId;
        if (obj == null)
        {
            obj = new CustomerDto();
        }
        // initialize the context
        editContext = new EditContext(obj);
        await LoadCustomerTypes().ConfigureAwait(false);
    }

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync().ConfigureAwait(false);

        if (objId != ObjId)
        {
            objId = ObjId;
            await LoadObj().ConfigureAwait(false);
            // update the context
            editContext = new EditContext(obj);
        }
    }

    private async Task LoadObj()
    {
        if (!ObjId.Equals(Guid.Empty))
        {
            mode = "Edit";
            var response = await CustomerService.GetCustomerByIdAsync(ObjId).ConfigureAwait(false);
            if (response.IsSuccess)
            {
                obj = response.Data;
            }
            else
                await NotificationService.ShowError(response.ErrorMessage, response.ErrorTitle);
        }
        else
        {
            mode = "Add";
            obj = new CustomerDto();
        }
    }

    private async Task SaveChanges()
    {
        if (isSaving) return;

        isSaving = true;

        if (!editContext.Validate())
        {
            Console.WriteLine("Form validation failed!");
            return;
        }

        bool isSuccess = false;
        var task = DialogService.OpenAsync("", ds => @<BusyDialog />,
        new DialogOptions { ShowTitle = false, CloseDialogOnEsc = false, Style = "min-height:auto;min-width:auto;width:auto" });

        try
        {
            CustomerDto response = null;
            if (mode == "Add" && ObjId == Guid.Empty)
            {
                response = await CustomerService.CreateCustomerAsync(obj).ConfigureAwait(false);
            }
            else
            {
                response = await CustomerService.UpdateCustomerAsync(obj).ConfigureAwait(false);
            }

            if (response == null)
            {
                message = "An error occurred while saving your data.";
                await DialogService.Alert($"Error: {message}", "Error");
            }
            else
            {
                message = "Save successful.";
                isSuccess = true;
                await NotificationService.ShowSuccess(message);
            }
        }
        catch (Exception ex)
        {
            await DialogService.Alert($"Error: {ex.Message}", "Error");
        }
        finally
        {
            isSaving = false;
            DialogService.Close(isSuccess); // close the nested dialog
            if (isSuccess)
                DialogService.Close(isSuccess); // close the parent dialog
        }
    }

    public string SearchText
    {
        get
        {
            return searchText;
        }
        set
        {
            if (searchText != value)
            {
                searchText = value;
                // searchTextStatus = $"Search text: {searchText}";
                //Console.WriteLine($"Search text: {radzenDropDown.SearchText}");
            }
        }
    }

    private async Task LoadCustomerTypes()
    {
        var response = await CustomerTypeService.GetAllCustomerTypesAsync().ConfigureAwait(false);
        if (response.IsSuccess)
            customerTypes = response.Data;
        else
            await NotificationService.ShowError(response.ErrorMessage, response.ErrorTitle);
    }
}
